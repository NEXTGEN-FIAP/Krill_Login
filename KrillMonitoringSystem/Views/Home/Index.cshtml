@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <div class="text-center">
        <h1 class="display-4">Southern Ocean Sentinel</h1>
        <p>Sistema de monitoramento de krills</p>
        <div class="container">
            <h2>Cadastre sua base</h2>
            <form>
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input type="text" class="form-control" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label for="email">email</label>
                    <input type="email" class="form-control" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="telefone">Telefone</label>
                    <input type="tel" class="form-control" placeholder="Enter your telefone">
                </div>
                <div class="form-group">
                    <label for="endereço">Nome de Usuario</label>
                    <input type="text" class="form-control" placeholder="Enter your username">
                </div>
                <div class="form-group">
                    <label for="endereço">Senha</label>
                    <input type="password" class="form-control" placeholder="Enter your password">
                </div>
                <br/>
                <button type="submit" class="btn btn-primary d-block w-100 mb-2" asp-controller="Login" asp-action="Cadastrar">Submit</button>
                <a asp-controller="LoginController" asp-action="Index" class="btn btn-secondary d-block" role="button">Base já cadastrada?</a>
            </form>
        </div>
    </div>
</div>